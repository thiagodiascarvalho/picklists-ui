node('aws-codebuild'){

    stage('Clean') {
        deleteDir()
    }

    stage('Fetch') {
        timeout(time: 60, unit: 'SECONDS') {
            checkout scm
        }
    }

    stage('Environment Config') {
      sh "auto_config"
    }

    // stage('Test'){
    //     docker.image('cirrusci/flutter:3.0.5').inside('-v /root/.ssh:/root/.ssh'){
    //         sh 'flutter test'
    //     }
    // }

    // stage('Analyze'){
    //     docker.image('cirrusci/flutter:3.0.5').inside('-v /root/.ssh:/root/.ssh'){
    //         sh 'flutter analyze'
    //     }
    // }


    docker.image('fischerscode/flutter:flutter-3.4-candidate.26').inside("-v /root/.ssh:/root/.ssh"){
        stage('Build'){
            sh 'git config --global --add safe.directory /home/flutter/flutter-sdk'
            sh 'flutter build web --web-renderer html'
            // else if(env.BRANCH_NAME == 'master'){
            //     sh 'flutter build web -t lib/main_hml.dart'
            // }
        }
    }

    stage('Upload to AWS'){
        withAWS(credentials: 'JENKINS_UPLOAD_S3', region: 'us-west-2'){
            if(env.BRANCH_NAME == 'production'){
                def bucket = 'picklistsui-app'
                s3Upload(
                    bucket:"${bucket}",
                    path:"",
                    includePathPattern: '**/*',
                    workingDir: 'build/web/'
                )
            }

            else if (env.BRANCH_NAME == 'production2'){
                def bucket = 'picklistsui-prod'
                s3Upload(
                    bucket:"${bucket}",
                    path:"",
                    includePathPattern: '**/*',
                    workingDir: 'build/web/'
                )
            }

            // else if (env.BRANCH_NAME == 'main'){
            //     def bucket = 'picklistsui-prod-developer'
            //     s3Upload(
            //         bucket:"${bucket}",
            //         path:"",
            //         includePathPattern: '**/*',
            //         workingDir: 'build/web/'
            //     )
            // }
        }
    }
}
